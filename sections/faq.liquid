<section
  data-section-id="{{ section.id }}"
  id="faq"
  class="faq"
>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
          <div data-section="" id="block-{{ block.id }}" class="store">
            {% unless block.settings.title == blank %}
              <h2 class="title">{{ block.settings.title }}</h2>
            {% endunless %}
          </div>
        {% when 'summary' %}
        {% unless block.settings.subtitle and block.settings.interior  == blank %}
          <details>
            <summary>{{ block.settings.subtitle }}</summary>
            <div class="interior">{{ block.settings.interior }}</div>
          </details>
        {% endunless %}
    {% endcase %}
  {% endfor %}
</section>
{% schema %}
{
  "name": "INFO-BLOCK",
  "blocks": [
    {
      "type": "text",
      "name": "Title",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        }
      ]
    },
    {
      "type": "summary",
      "name": "Question",
      "settings": [
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "richtext",
          "id": "interior",
          "label": "Interior"
        }
      ]
    }
  ]
}
{% endschema %}
