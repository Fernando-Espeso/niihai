<div class="main">
    {% if article.content != blank %}
        <!--Content-->
          <div class="collecion_information">
            <div><span class="collection_title">{{ article.title }}</span>,<span style="font-size:15px"> {{ article.tags }}</span></div>
            <div class="content">{{ article.content | replace: '_16x16', '' | replace: '_32x32', '' | replace: '_50x50', '' | replace: '_100x100', '' | replace: '_160x160', '' | replace: '_240x240', '' | replace: '_480x480', '' | replace: '_600x600', '' | replace: '_1024x1024', '' }}</div>
          </div>
      {% endif %}
      {% unless article.metafields.custom.credits == blank %}
            <div class="credits">
                {{ article.metafields.custom.credits }}
            </div>
      {% endunless %}
      {% if article.image.size > 0 %}
        <div class="center">
             <img class="lazy" src="{{ article | img_url: 'thumb' }}" data-src="{{ article | img_url: 'master' }}" alt="{{ article.title }}" />
        </div>
      {% endif %}
      <div class="bottom">{{ article.excerpt | replace: '_16x16', '' | replace: '_32x32', '' | replace: '_50x50', '' | replace: '_100x100', '' | replace: '_160x160', '' | replace: '_240x240', '' | replace: '_480x480', '' | replace: '_600x600', '' | replace: '_1024x1024', '' }}</div>
      <div class="bottom">DATE, {{ article.published_at | date: "%b %d %Y" }}</div>

</div>
